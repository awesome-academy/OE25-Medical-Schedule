<table id="example2" class="table table-bordered table-hover table-responsive">
  <thead>
    <tr>
      <th><%= t "stt" %></th>
      <th><%= t "avatar" %></th>
      <th><%= t "full_name" %></th>
      <th><%= t "user_name" %></th>
      <th><%= t "email" %></th>
      <th><%= t "phone" %></th>
      <th><%= t "address" %></th>
      <th class="action-head"><%= t "action" %></th>
    </tr>
  </thead>
  <tbody>
    <% @staffs.each_with_index do |staff, index| %>
      <tr>
        <td class="centered no_content"><%= numbered params[:page], index, Settings.per_page %></td>
        <td class="centered fit_content"><%= image_tag staff.display_image, class: "user_avatar" %></td>
        <td class="name_content"><%= staff.full_name %></td>
        <td class="name_content"><%= staff.user_name %></td>
        <td class="name_content"><%= staff.email %></td>
        <td class="phone_content"><%= staff.phone %></td>
        <td class="address_content"><%= staff.address %></td>
        <td class="centered fit_content">
          <%= link_to t("edit"), edit_admin_staff_path(staff), class: "btn btn-primary btn-size", method: :get %>
          <%= link_to t("delete"), admin_staff_path(staff), method: :delete, data: {confirm: t("are_you_sure_delete")}, class: "btn btn-danger btn-size" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
